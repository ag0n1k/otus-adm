#jinja2: trim_blocks: True, lstrip_blocks: True
{{ ansible_managed | comment }}

[Unit]
Description=Prometheus
After=network.target

[Service]
Type=simple
Environment="GOMAXPROCS={{ ansible_processor_vcpus|default(ansible_processor_count) }}"
User={{ prometheus_user_configuration.username }}
Group={{ prometheus_user_configuration.group }}
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/usr/local/bin/prometheus \
  --config.file={{ prometheus_conf_dir }}/prometheus.yml \
  --storage.tsdb.path={{ prometheus_data_dir }} \
  --storage.tsdb.retention={{ prometheus_storage_retention }} \
  --web.console.libraries={{ prometheus_conf_dir }}/console_libraries \
  --web.console.templates={{ prometheus_conf_dir }}/consoles \
  --web.listen-address={{ prometheus_listen_address }} \

PrivateTmp=true
PrivateDevices=true
ProtectHome=true
NoNewPrivileges=true
LimitNOFILE={{ prometheus_pam_no_file }}
{% if __prometheus_systemd_version.stdout | int >= 231 %}
ReadWritePaths={{ prometheus_data_dir }}
{% else %}
ReadWriteDirectories={{ prometheus_data_dir }}
{% endif %}
{% if __prometheus_systemd_version.stdout | int >= 232 %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true
{% else %}
ProtectSystem=full
{% endif %}

{% if prometheus_http_proxy is defined %}
Environment="HTTP_PROXY={{ prometheus_http_proxy }}"{% if prometheus_https_proxy is defined %} "HTTPS_PROXY={{ prometheus_https_proxy }}{% endif %}"
{% endif %}

SyslogIdentifier=prometheus
Restart=always

[Install]
WantedBy=multi-user.target